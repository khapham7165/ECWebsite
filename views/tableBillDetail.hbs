        <div class="breadcrumbs">
            <div class="breadcrumbs-inner">
                <div class="row m-0">
                    <div class="col-sm-4">
                        <div class="page-header float-left">
                            <div class="page-title">
                                <h1>Dashboard</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="page-header float-right">
                            <div class="page-title">
                                <ol class="breadcrumb text-right">
                                    <li><a href="/admin">Dashboard</a></li>
                                    <li><a href="/tableProducts">Thống kê khóa học</a></li>
                                    <li class="active">Chi tiết hóa đơn</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Thông tin Hóa đơn thanh toán</strong>
                            </div>
                            <div class="card-body">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>id</th>
                                            <th>userId người mua</th>
                                            <th>Người mua</th>
                                            <th>Email người mua</th>
                                            <th>Tổng tiền</th>
                                            <th>Ngày mua</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#with bill}}
                                            <tr>
                                                <th>{{id}}</th>
                                                <th>{{userId}}</th>
                                                <th>{{User.fullname}}</th>
                                                <th>{{User.email}}</th>
                                                <th>{{totalcost}}vnđ</th>
                                                <th>{{buydate}}</th>
                                            </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="card-header">
                                <strong class="card-title">Thông tin chi tiết hóa đơn: <span style="color: crimson;">{{name}}</span></strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>id</th>
                                            <th>Khóa học</th>
                                            <th>Đơn giá</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each BillDetails}}
                                            <tr>
                                                <th>{{id}}</th>
                                                <th>{{Product.name}}</th>
                                                <th>{{Product.price}}</th>
                                            </tr>
                                        {{/each}}
                                    </tbody>
                                    {{/with}}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- .animated -->
        </div><!-- .content -->